<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartShop.MAUI.ViewModels"
             x:Class="SmartShop.MAUI.Views.ProfilePage"
             Title="Profile"
             
             x:DataType="vm:ProfilePageViewModel"
             NavigationPage.HasNavigationBar="True"
             Shell.NavBarIsVisible="True"
             >
    <ContentPage.Resources>
        <!-- Card Style -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Stroke" Value="#e0e0e0" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="BackgroundColor" Value="#f9f9f9" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Styles -->
        <Style x:Key="InfoLabelHeader" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="#333333" />
        </Style>

        <Style x:Key="InfoLabelValue" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="#666666" />
        </Style>
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout Style="{StaticResource WindowsLayoutStyle}">

            <!-- Username -->
            <Border Style="{StaticResource InfoCardStyle}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Username:" Style="{StaticResource InfoLabelHeader}" />
                    <Label Text="{Binding User.UserName}" Style="{StaticResource InfoLabelValue}" />
                </VerticalStackLayout>
            </Border>

            <!-- Email -->
            <Border Style="{StaticResource InfoCardStyle}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Email:" Style="{StaticResource InfoLabelHeader}" />
                    <Label Text="{Binding User.Email}" Style="{StaticResource InfoLabelValue}" />
                </VerticalStackLayout>
            </Border>

            <!-- Name -->
            <Border Style="{StaticResource InfoCardStyle}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Name:" Style="{StaticResource InfoLabelHeader}" />
                    <Label Text="{Binding User.Name}" Style="{StaticResource InfoLabelValue}" />
                </VerticalStackLayout>
            </Border>

            <!-- Last Login -->
            <Border Style="{StaticResource InfoCardStyle}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Last Login Date:" Style="{StaticResource InfoLabelHeader}" />
                    <Label Text="{Binding User.LastLoginDate, StringFormat='{0:MM/dd/yyyy HH:mm}'}"
                           Style="{StaticResource InfoLabelValue}" />
                </VerticalStackLayout>
            </Border>

            <!-- Account Status -->
            <Border Style="{StaticResource InfoCardStyle}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Account Status:" Style="{StaticResource InfoLabelHeader}" />
                    <Label Text="{Binding User.IsActive, Converter={StaticResource BoolToStatusConverter}}"
                           Style="{StaticResource InfoLabelValue}" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>