<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShop.MAUI.Views.ResetPasswordPage"
             Title=""
             Shell.FlyoutBehavior="Disabled"
             NavigationPage.HasBackButton="True"
             Shell.NavBarIsVisible="True"
             x:DataType="vm:LoginViewModel"
             xmlns:vm="clr-namespace:SmartShop.MAUI.ViewModels">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Reset Your Password"
                   HorizontalOptions="Center"
                   FontSize="24"/>

            <Label Text="Enter your email address below to receive a password reset link."
                   HorizontalOptions="Center"

                   HorizontalTextAlignment="Center"/>

            <Entry Placeholder="Email Address"
                   Keyboard="Email" />

            <Button Text="Send Reset Link"
                    Command="{Binding ResetPasswordCommand}" 
                    CornerRadius="20"/>

            <Label x:Name="StatusMessage"
                   Text=""
                   FontSize="12"
                   TextColor="#FFD700"
                   HorizontalOptions="Center"
                   IsVisible="False" />

        </StackLayout>
    </ScrollView>
</ContentPage>