<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShop.MAUI.Views.LoginPage" Title=""
             BackgroundColor="Transparent">
    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Border Stroke="#E0E0E0"
                    StrokeThickness="1"
                    Background="#FFFFFF"
                    StrokeShape="RoundRectangle 16"
                    Margin="0"
                    Padding="25"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                <StackLayout Spacing="18">
                    <!-- Logo (add logo.png to your Resources/Images folder) -->
                    <Image Source="logo.png"
                           HeightRequest="80"
                           HorizontalOptions="Center" />

                    <!-- Welcome Text -->
                    <Label Text="Welcome to SmartShop"
                           FontAttributes="Bold"
                           FontSize="26"
                           HorizontalOptions="Center"
                           TextColor="#222" />

                    <!-- Subtitle -->
                    <Label Text="Sign in to continue"
                           FontSize="15"
                           HorizontalOptions="Center"
                           TextColor="#888" />

                    <!-- Username Entry -->
                    <Entry x:Name="UsernameEntry"
                           Placeholder="Username"
                           Keyboard="Email"
                           Margin="0,10,0,0"
                           BackgroundColor="#F0F1F6"
                           HeightRequest="44"
                           TextColor="#222" />

                    <!-- Password Entry -->
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           IsPassword="True"
                           BackgroundColor="#F0F1F6"
                           HeightRequest="44"
                           TextColor="#222" />

                    <!-- Login Button -->
                    <Button Text="Login"
                            x:Name="LoginButton"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontAttributes="Bold"
                            Margin="0,10,0,0" />

                    <!-- Forgot Password -->
                    <Label Text="Forgot Password?"
                           TextColor="#007AFF"
                           HorizontalOptions="Center"
                           FontSize="14"
                           Margin="0,10,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>