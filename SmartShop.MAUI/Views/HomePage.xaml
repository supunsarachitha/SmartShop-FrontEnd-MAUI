<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartShop.MAUI.ViewModels"
             x:Class="SmartShop.MAUI.Views.HomePage"
             x:DataType="vm:HomePageViewModel"
             Title="Home"
             Background="{StaticResource HomePageBackgroundBrush}"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">


    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="40">
            <!-- Header -->
            <Label Text="Welcome to SmartShop"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource PrimaryTextColor}" />

            <!-- Grid for Buttons -->
            <Grid RowSpacing="30" ColumnSpacing="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Profile -->
                <Border Grid.Row="0" Grid.Column="0" 
                        Style="{StaticResource HomePageBorderStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="&#xf007;"
                               Style="{StaticResource HomePageIconStyle}" />
                        <Label Text="Profile"
                               Style="{StaticResource HomePageLabelStyle}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Invoice -->
                <Border Grid.Row="0" Grid.Column="1" 
                        Style="{StaticResource HomePageBorderStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToInvoiceCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="&#xf571;"
                               Style="{StaticResource HomePageIconStyle}" />
                        <Label Text="Invoice"
                               Style="{StaticResource HomePageLabelStyle}" />
                    </VerticalStackLayout>
                </Border>

                <!-- History -->
                <Border Grid.Row="1" Grid.Column="0" 
                        Style="{StaticResource HomePageBorderStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToHistoryCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="&#xf1da;"
                               Style="{StaticResource HomePageIconStyle}" />
                        <Label Text="History"
                               Style="{StaticResource HomePageLabelStyle}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Reports -->
                <Border Grid.Row="1" Grid.Column="1"
                         
                        Style="{StaticResource HomePageBorderStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToReportsCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="&#xf201;"
                               Style="{StaticResource HomePageIconStyle}" />
                        <Label Text="Reports"
                               Style="{StaticResource HomePageLabelStyle}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Settings -->
                <Border Grid.Row="2" Grid.Column="0"
                        
                        Style="{StaticResource HomePageBorderStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="&#xf013;"
                               Style="{StaticResource HomePageIconStyle}" />
                        <Label Text="Settings"
                               Style="{StaticResource HomePageLabelStyle}" />
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>